<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RadarView">
        <!--圆圈和交叉线的颜色-->
        <attr name="circleColor" format="color" />
        <!--圆圈的数量-->
        <attr name="circleNum" format="integer" />
        <!--扫描的颜色 RadarView会对这个颜色做渐变透明处理-->
        <attr name="gradientColor" format="color" />
        <!--水滴的颜色-->
        <attr name="raindropColor" format="color" />
        <!--水滴的数量 这里表示的是水滴最多能同时出现的数量。因为水滴是随机产生的，数量是不确定的-->
        <attr name="raindropNum" format="integer" />
        <!--水滴半径超过这个值或透明度为0时消失-->
        <attr name="raindropMaxWidth" format="integer"/>
        <!--是否显示交叉线-->
        <attr name="showCross" format="boolean" />
        <!--是否显示水滴-->
        <attr name="showRaindrop" format="boolean" />
        <!--扫描的转速，表示几秒转一圈-->
        <attr name="speed" format="float" />
        <!--水滴显示和消失的速度-->
        <attr name="flicker" format="integer" />
    </declare-styleable>
    <declare-styleable name="RippleView">
        <!--波纹动画时长-->
        <attr name="pippleDuration" format="integer"/>
        <!--波纹颜色-->
        <attr name="pippleColor" format="color"/>
        <!--波纹宽度-->
        <attr name="pippleWidthDp" format="integer"/>
        <!--波纹起始到边界间隔 最大为半径-->
        <attr name="pippleSpaceDp" format="integer"/>
    </declare-styleable>
    <declare-styleable name="TemperatureView">
        <!--默认正方形边大小-->
        <attr name="defaultSize" format="integer"/>
        <!--默认画笔粗细-->
        <attr name="defaultPaintStrokeWidth" format="integer"/>
        <!--默认当前温度-->
        <attr name="currentTemp" format="integer"/>
        <!--最高温度-->
        <attr name="maxTemp" format="integer"/>
        <!--最低温度-->
        <attr name="minTemp" format="integer"/>
        <!--左下文字-->
        <attr name="leftBottomText" format="string"/>
        <!--左中文字-->
        <attr name="leftCenterText" format="string"/>
        <!--左上文字-->
        <attr name="leftTopText" format="string"/>
        <!--右上文字-->
        <attr name="rightTopText" format="string"/>
        <!--右中文字-->
        <attr name="rightCenterText" format="string"/>
        <!--右下文字-->
        <attr name="rightBottomText" format="string"/>
        <!--中间文字-->
        <attr name="centerBottomText" format="string"/>
        <!--6个文字颜色-->
        <attr name="sixTextColor" format="color"/>
        <!--6个温度颜色-->
        <attr name="sixTempColor" format="color"/>
        <!--中间文字颜色-->
        <attr name="centerBottomTextColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ScaleOrMoveView">
        <!--是否边界限制-->
        <attr name="bordLimit" format="boolean"/>
        <!--最大放大倍数 非负数 -->
        <attr name="maxTimes" format="float"/>
        <!--最小缩小倍数 非负数-->
        <attr name="minTimes" format="float"/>
        <!--当图宽小于屏幕宽或图高小于屏幕高时,是否移动到中间缩放-->
        <attr name="centerIfScale" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="SwitchView">
        <!--圆到边界间隔-->
        <attr name="defaultSpaceDpSize" format="integer"/>
        <!--动画时间-->
        <attr name="duration" format="integer"/>
        <!--默认是否打开-->
        <attr name="isOpen" format="boolean"/>
        <!--打开时背景色-->
        <attr name="bgPaintOpenColor" format="color"/>
        <!--关闭时背景色-->
        <attr name="bgPaintCloseColor" format="color"/>
        <!--中心圆背景色-->
        <attr name="centerPaintColor" format="color"/>
        <!--文字颜色-->
        <attr name="textPaintColor" format="color"/>
        <!--打开时文本-->
        <attr name="openText" format="string"/>
        <!--关闭时文本-->
        <attr name="closeText" format="string"/>
    </declare-styleable>
    <declare-styleable name="GestureView">
        <!--轨迹颜色-->
        <attr name="pathColor" format="color"/>
        <!--轨迹宽度-->
        <attr name="pathWidth" format="integer"/>
        <!--背景颜色-->
        <attr name="bgColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="DownPullView">
        <!--文字颜色-->
        <attr name="tvColor" format="color"/>
        <!--文字大小-->
        <attr name="tvSizeSp" format="integer"/>
        <!--未选择时文字-->
        <attr name="tvDefault" format="string"/>
        <!--下拉限制个数-->
        <attr name="itemLimit" format="integer"/>
    </declare-styleable>


    <attr name="interval" format="integer"/>
    <attr name="showIndicator" format="boolean"/>
    <attr name="orientation" format="enum">
        <enum name="horizontal" value="0"/>
        <enum name="vertical" value="1"/>
    </attr>
    <attr name="autoPlaying" format="boolean"/>
    <declare-styleable name="RecyclerViewBannerBase">
        <attr name="interval"/>
        <attr name="showIndicator" />
        <attr name="orientation" />
        <attr name="autoPlaying"/>
        <attr name="indicatorSelectedSrc" format="color|reference"/>
        <attr name="indicatorUnselectedSrc" format="color|reference"/>
        <attr name="indicatorSpace" format="dimension|reference"/>
        <attr name="indicatorMarginLeft" format="dimension|reference"/>
        <attr name="indicatorMarginRight" format="dimension|reference"/>
        <attr name="indicatorMarginBottom" format="dimension|reference"/>
        <attr name="indicatorGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="BannerLayout">
        <attr name="interval" />
        <attr name="showIndicator" />
        <attr name="orientation" />
        <attr name="autoPlaying"/>
        <attr name="itemSpace" format="integer"/>
        <attr name="centerScale" format="float"/>
        <attr name="moveSpeed" format="float"/>
    </declare-styleable>

    <declare-styleable name="KeyWordView">
        <attr name="bg_width" format="dimension" />
        <attr name="bg_color" format="color" />
        <attr name="password_count" format="integer" />
        <attr name="division_color" format="color" />
        <attr name="division_width" format="dimension" />
        <attr name="password_color" format="color" />
        <attr name="password_size" format="dimension" />
        <attr name="bg_radius" format="dimension" />
    </declare-styleable>
</resources>