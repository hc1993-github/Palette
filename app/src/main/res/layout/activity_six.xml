<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootlayout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.SixActivity">
    <com.example.palette.view.GestureView
        android:id="@+id/gv"
        android:layout_width="400dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#AC8686"/>
    <EditText
        android:clickable="true"
        android:id="@+id/et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="请输入电脑宽高和IP"
        android:text="1920-1080-192.168.1.236"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#A59898"
        android:imeOptions="actionDone"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_connect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:clickable="true"
        android:id="@+id/tv_connect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="连接服务"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#E3BABA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_click"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_set"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:clickable="true"
        android:id="@+id/tv_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="设置PC大小"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#817575"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_click"
        app:layout_constraintLeft_toRightOf="@id/tv_connect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:clickable="true"
        android:id="@+id/tv_click"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="单机"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#75A898"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_stop"
        app:layout_constraintVertical_bias="1"/>
    <TextView
        android:clickable="true"
        android:id="@+id/tv_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="停止"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#BBC391"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_click"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>