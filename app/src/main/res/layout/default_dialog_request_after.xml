<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_corner_rectangle"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/default_dialog_request_after_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="为保证应用正常运行,必须申请以下权限"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/default_dialog_request_after_view1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:id="@+id/default_dialog_request_after_view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E8D2D2"
        app:layout_constraintTop_toBottomOf="@id/default_dialog_request_after_tv"
        app:layout_constraintBottom_toTopOf="@id/default_dialog_request_after_rv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/default_dialog_request_after_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/default_dialog_request_after_view3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/default_dialog_request_after_positive"/>
    <View
        android:id="@+id/default_dialog_request_after_view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E8D2D2"
        app:layout_constraintTop_toBottomOf="@id/default_dialog_request_after_rv"
        app:layout_constraintBottom_toTopOf="@id/default_dialog_request_after_positive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/default_dialog_request_after_negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="拒绝"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/default_dialog_request_after_rv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/default_dialog_request_after_view2"
        app:layout_constraintHorizontal_bias="1"/>
    <View
        android:id="@+id/default_dialog_request_after_view2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#E8D2D2"
        app:layout_constraintTop_toTopOf="@id/default_dialog_request_after_negative"
        app:layout_constraintBottom_toBottomOf="@id/default_dialog_request_after_negative"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/default_dialog_request_after_positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="接受"
        android:padding="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/default_dialog_request_after_rv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/default_dialog_request_after_view2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0"/>
</androidx.constraintlayout.widget.ConstraintLayout>