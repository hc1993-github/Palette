<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--圆角-->
    <corners android:radius="50dp"/>
    <!--内部填充色-->
    <solid android:color="#9F9FE4"/>
    <!--内部内容边距-->
    <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp"/>
    <!--大小-->
    <size android:width="100dp" android:height="50dp"/>
    <!--边界绘制-->
    <stroke android:color="#ff0000" android:width="1dp" android:dashGap="30dp" android:dashWidth="20dp"/>
    <!--颜色渐变-->
    <gradient android:startColor="#9F9FE4" android:endColor="#ff0000"/>
</shape>